  <par indent="28.35" left-indent="7.1" right-indent="0" space-before="0" space-after="0.0" alignment="JUSTIFY (3)" widow-control="False" word-метод="1" word-оформление="1" word-средство="1" has-no-verbs="1" t-id="discipline-purpose-description-attainments-declaration-item">
