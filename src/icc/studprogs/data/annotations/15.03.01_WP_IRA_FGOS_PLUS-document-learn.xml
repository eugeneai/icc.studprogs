  </par>
  <par right-indent="0" widow-control="False" indent="18.0" t-id="discipline-purpose-competention-item" space-after="0" space-before="0" left-indent="0.0" opk-sign="1" opk="опк-5" has-no-verbs="1" word-технология="1" word-применение="1" word-информационный="1" word-задача="1" contextual-section-mark="1.1">
